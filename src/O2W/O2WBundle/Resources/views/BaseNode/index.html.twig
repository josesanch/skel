<h1>BaseNode list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Title</th>
            <th>Path</th>
            <th>Body</th>
            <th>Blocks</th>
            <th>Files</th>
            <th>Slug</th>
            <th>Controller</th>
            <th>Language</th>
            <th>Createdat</th>
            <th>Updatedat</th>
            <th>Metadescription</th>
            <th>Metakeywords</th>
            <th>Revision</th>
            <th>Tags</th>
            <th>Published</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('basenode_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.path }}</td>
            <td>{{ entity.body }}</td>
            <td>{{ entity.blocks }}</td>
            <td>{{ entity.files }}</td>
            <td>{{ entity.slug }}</td>
            <td>{{ entity.controller }}</td>
            <td>{{ entity.language }}</td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.metaDescription }}</td>
            <td>{{ entity.metaKeywords }}</td>
            <td>{{ entity.revision }}</td>
            <td>{{ entity.tags }}</td>
            <td>{{ entity.published }}</td>
            <td>{{ entity.type }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('basenode_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('basenode_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('basenode_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
